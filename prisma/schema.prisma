generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Session {
  id        String   @id @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
}

model Key {
  id             String  @id @unique
  userId         String
  user           User    @relation(fields: [userId], references: [id])
  hashedPassword String?
}

model User {
  id           String         @id @unique
  username     String         @unique
  email        String         @unique
  auth_session Session[]
  key          Key[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  role         String         @default("USER")
  isAdmin      Boolean        @default(false)
  organizations Organization[] @relation("UserOrganizations")
}

model Organization {
  id              String   @id @default(cuid())
  name            String
  description     String
  category        String
  website         String?
  focusAreas      String   // JSON array
  engagementTypes String   // JSON array
  locations       String   // JSON array
  contact         String?  // JSON object {email?, phone?, signal?}
  socialMedia     String?  // JSON object {twitter?, facebook?, instagram?, linkedin?, bluesky?, threads?, mastodon?, nostr?}
  logo            String?
  joinNowLink     String?
  membersCount    Int?
  staff           String?  // JSON object {range: [number, number], description: string}
  supporter       String?  // JSON object {range: [number, number], description: string}
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  approved        Boolean  @default(false)
  createdBy       User     @relation("UserOrganizations", fields: [createdById], references: [id])
  createdById     String
}
